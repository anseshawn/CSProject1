@*
   메인
*@
@{
    String u_id = ViewData["u_id"] as String ?? String.Empty;
}
@{
    <html>
    <head>
        <title>커뮤니티 메인</title>
        <meta http-equiv='Content-Type' content='text/html; charset=utf-8'>
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://kit.fontawesome.com/30451a74a8.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- 커스텀알럿 -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <style>
            body, html {
                height: 100%;
            }

            body, .navbar {
                font-family: 'MS PGothic';
                background-color: #aaa;
            }

            .center-container {
                height: 100%;
            }

            .contentMain {
                border: 1px solid #DDD;
                padding: 10rem 7rem;
            }

            .navbar a:link {
                color: #DDD;
                text-decoration: none;
            }

            .navbar a:visited {
                color: #DDD;
                text-decoration: none;
            }

            .navbar a:hover {
                color: #FFF;
                text-decoration: none;
            }

            .navbar a:active {
                color: #FFF;
                text-decoration: none;
            }

            .board_list {
                list-style: none;
                padding: 0;
                margin: 0;
                width: 100%;
            }

            .board_list li {
                display: flex;
                border-bottom: 1px solid #ccc;
                padding: 10px 0;
            }

            .board_list li.header {
                font-weight: bold;
                background-color: #f0f0f0;
            }

            .board_list li div {
                flex: 1;
                padding: 0 10px;
            }

            .funcBtn_A {
                padding: 0.5rem 1rem;
                color: #fff;
                background: #888;
                font-weight: bold;
                border: none;
                border-radius: 5px;
            }
            .funcBtn_A:hover, .funcBtn_sm:hover {
                color: #fff;
                background: #555;
            }
            .funcBtn_sm {
                padding: 0.3rem 0.5rem;
                color: #fff;
                background: #888;
                font-size: 0.8rem;
                font-weight: bold;
                border: none;
                border-radius: 5px;
            }

            .board_list a:link {
                color: #000;
                text-decoration: none;
            }

            .board_list a:visited {
                color: #000;
                text-decoration: none;
            }

            .board_list a:hover {
                color: #999;
                text-decoration: none;
            }

            .board_list a:active {
                color: #999;
                text-decoration: none;
            }

            .B_Author {
                cursor: pointer;
            }

            .menu-container {
                position: relative;
                display: inline-block;
            }

            .menu {
                position: absolute;
                top: 100%;
                left: 0;
                background-color: white;
                border: 1px solid #ccc;
                padding: 0.2rem;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                z-index: 100;
            }

            .menu ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                white-space: nowrap;
            }

            .menu li {
                display: block;
                margin-right: 10px;
                margin-bottom: 5px;
            }

            .menu a {
                display: block;
                padding: 5px;
                text-decoration: none;
                color: #333;
            }

            .menu a:hover {
                color: #6F8BA4;
            }

            .hidden {
                display: none;
            }
        </style>
        <script>
            'use strict';

            let u_id = '@u_id';

            window.onload = function() {
                eventbind();
                loadBoardList(1);
            }

            function eventbind() {
                if(u_id == "") {
                    document.querySelector(".loginMenu").style.display = "flex";
                    document.querySelector(".logoutMenu").style.display = "none";
                }
                else {
                    document.querySelector(".loginMenu").style.display = "none";
                    document.querySelector(".logoutMenu").style.display = "flex";
                }

                document.getElementById("listInitBtn").onclick = function () {
                    loadBoardList();
                }

                document.getElementById("writeBtn").onclick = function() {
                    window.location.href = "/Community/Home/WriteBoard";
                }

                document.getElementById("searchBtn").onclick = function () {
                    searchFunc();
                }
            }

            function memberLogout() {
                $.ajax({
                    url: "/Main/MemberLogout",
                    type: "POST",
                    data: {
                        u_id: u_id
                    },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                //title: '성공',
                                text: response.message,
                                showCancelButton: false,
                                confirmButtonColor: "#3085d6",
                                confirmButtonText: "확인"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = response.redirectUrl;
                                }
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: '실패',
                                text: response.message
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: '서버 오류',
                            text: '잠시 후 다시 시도해주세요.'
                        });
                    }
                });
            }

            function loadBoardList(page = 1) {
                fetch(`/Community/Home/BoardList?CatCls=01&Pag=${page}`, {
                    method: "GET"
                })
                .then(response => response.json())
                .then(resultSet => {
                    if (resultSet.code != 200 || resultSet.message != "OK") {
						console.log("GET BoardList: NG");
						return false;
					}
					if (resultSet.data.boardList.length == 0) {
						console.log("GET BoardList: No data");
					}
                    else {
                        console.log(resultSet.data);
                        let boardList = resultSet.data.boardList;
                        let pageInfo = resultSet.data.page;
                        let board = document.querySelector(".board_items");
                        board.innerHTML = ""; // 기존 리스트 초기화
                        for(let i = 0; i < boardList.length; i++) {
                            addBoardList(boardList[i], i);
                        }
                        renderPagination(pageInfo);
                    }
                })
                .catch((err) => {
                    console.log(err);
                    Swal.fire({
                        icon: 'error',
                        title: '서버 오류',
                        text: '잠시 후 다시 시도해주세요.'
                    });
                });
            }

            function addBoardList(data, index) {
                console.log(data);
                let main = document.querySelector(".contentMain");
                let board = main.querySelector(".board_items");
                let template = document.querySelector("template.BoardList");
				let clone = document.importNode(template.content, true);
                let listBlock = clone.querySelector(".board_list");

                listBlock.querySelector(".idx").textContent = data.idx;
                listBlock.querySelector(".B_title").innerHTML = `<a href="/Community/Home/BoardContent?idx=${data.idx}">${data.b_title}</a>`;
                listBlock.querySelector(".EnterDate").textContent = data.enterDateTime.split("T")[0];

                let B_Author = listBlock.querySelector(".B_Author");
                let EnterUser = B_Author.querySelector(".EnterUser");
                let menu = B_Author.querySelector(".menu");

                EnterUser.textContent = data.b_author;
                EnterUser.addEventListener('click', function () {
                    menu.classList.toggle('hidden');
                });

                document.addEventListener('click', function (event) {
                    if (!B_Author.contains(event.target)) {
                        menu.classList.add('hidden');
                    }
                });

                // 메뉴 링크 동적 설정
                let blogLink = menu.querySelector("a[href^='javascript:userBlog']");
                if (blogLink) blogLink.setAttribute("href", `javascript:userBlog('${data.enterUser}')`);

                board.appendChild(clone);
            }

            function userBlog(u_id) {
                console.log("u_id : " , u_id);
                window.location = `/Blog/Home/VisitBlog?u_id=${encodeURIComponent(u_id)}`;
            }

            function renderPagination(pageInfo) {
                let pagination = document.getElementById("pagination");
                pagination.innerHTML = "";

                let currentPage = pageInfo.pag;
                let totalPages = pageInfo.totPage;
                let blockSize = pageInfo.blockSize;
                let curBlock = pageInfo.curBlock;

                let startPage = curBlock * blockSize + 1;
                let endPage = Math.min(startPage + blockSize - 1, totalPages);

                let createLink = (label, page, disabled = false, active = false) => {
                    let li = document.createElement("li");
                    li.className = `page-item ${disabled ? "disabled" : ""} ${active ? "active" : ""}`;

                    let a = document.createElement("a");
                    a.className = "page-link";
                    a.href = "#";
                    a.textContent = label;
                    a.onclick = function (e) {
                        e.preventDefault();
                        if (!disabled) {
                            loadBoardList(page);
                        }
                    };

                    li.appendChild(a);
                    return li;
                };

                pagination.appendChild(createLink("처음", 1, currentPage === 1));
                pagination.appendChild(createLink("이전", Math.max(1, startPage - 1), curBlock === 0));
                //pagination.appendChild(createLink("이전", Math.max(1, currentPage - 1), currentPage === 1));


                for (let i = startPage; i <= endPage; i++) {
                    pagination.appendChild(createLink(i, i, false, i === currentPage));
                }

                pagination.appendChild(createLink("다음", Math.min(totalPages, endPage + 1), curBlock === pageInfo.lastBlock));
                //pagination.appendChild(createLink("다음", Math.min(totalPages, currentPage + 1), currentPage === totalPages));
                pagination.appendChild(createLink("끝", totalPages, currentPage === totalPages));
            }

            function searchFunc() {
                let params = {
                    CatCls: "01",
                    Section: document.getElementById("Section").value,
                    SearchStr: document.getElementById("SearchStr").value
                }

                 $.ajax({
                    url: "/Community/Home/BoardList",
                    type: "GET",
                    data: params,
                    success: function (response) {
                        if (response.data.boardList.length == 0) {
                            console.log("GET Search BoardList: No data");
                            let board = document.querySelector(".board_items");
                            board.innerHTML = `검색 결과가 없습니다.`;
                        }
                        else {
                            let boardList = response.data.boardList;
                            let pageInfo = response.data.page;
                            let board = document.querySelector(".board_items");
                            board.innerHTML = ""; // 기존 리스트 초기화
                            for (let i = 0; i < boardList.length; i++) {
                                addBoardList(boardList[i], i);
                            }
                            renderPagination(pageInfo);
                         }
                    },
                    error: function (err) {
                        console.log("Search BaordList err : " , err);
                        Swal.fire({
                            icon: 'error',
                            title: '서버 오류',
                            text: '잠시 후 다시 시도해주세요.'
                        });
                    }
                  });
            }

        </script>
    </head>
    <body>
        <!-- 네비게이션 바 -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Main/Index">Your Marker</a>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav loginMenu mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Main/LoginView">로그인</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Main/JoinView">회원가입</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav logoutMenu mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link btn" onclick="memberLogout()">로그아웃</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container flex-column center-container">
            <div class="contentMain">
                <div class="row justify-content-end mt-2 mb-2">
                    <div class="col text-end">
                        <button type="button" id="listInitBtn" class="btn funcBtn_A">목록</button>
                        <button type="button" id="writeBtn" class="btn funcBtn_A">글쓰기</button>
                    </div>
                </div>
                <div class="row justify-content-center align-items-center mt-2 mb-2">
                    <div class="col">
                        <div class="text-center w-100" >
                            <ul class="board_list">
                                <li class="header">
                                    <div>번호</div>
                                    <div>제목</div>
                                    <div>작성자</div>
                                    <div>작성일</div>
                                </li>
                            </ul>
                            <div class="board_items"></div>
                        </div>
                    </div>
                </div>

                <div class="pagination-container mt-5">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center" id="pagination">
                            <!-- 페이지 버튼이 여기에 동적으로 추가됨 -->
                        </ul>
                    </nav>
                </div>

                <div class="input-group input-group-sm w-25">
                    <select id="Section" name="Section" class="category form-control d-inline-block w-auto">
                        <option value="B_title">제목</option>
                        <option value="B_content">내용</option>
                        <option value="B_author">작성자</option>
                    </select>
                    <input type="text" id="SearchStr" name="SearchStr" class="search_key form-control d-inline-block w-50" />
                    <input type="button" id="searchBtn" value="검색" class="btn funcBtn_sm d-inline-block"/>
                </div>
                <input type="hidden" id="catCls" name="catCls" value="01" />
            </div>
        </div>
        <template class="BoardList" id="">
            <ul class="board_list">
                <li>
                    <div class="idx"></div>
                    <div class="B_title"></div>
                    <div class="B_Author menu-container">
                        <span class="EnterUser"></span>
                        <div class="menu hidden">
                            <ul>
                                <li><a href="javascript:userBlog()">블로그방문</a></li>
                                <li><a>유저신고</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="EnterDate"></div>
                </li>
            </ul>
        </template>
    </body>
    </html>
}
